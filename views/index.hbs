<div class="container">
   <center>
   <h1>To Do App</h1>
   <h2>Enter your tasks here</h2>
   <form method="POST" action="/">
      <input type="text" name="task" id="task" required>
      <button type="submit" id="submit">Add Task</button>
   </form>
   <div id="tasks_container">
      <ul>
         {{#each items}}
         <div class="lst">
             <p class="ongoing">{{task}}</p>
         <a href="/{{task_id}}"><i class="fa ioc fa-2x fa-trash"></i></a>
         </div>
        
         {{/each}}
      </ul>
   </div>
   </center>
</div>